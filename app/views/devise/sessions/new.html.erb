<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-large', placeholder: "Seu e-mail" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: 'input is-large', placeholder: "Sua senha" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: 'button is-block is-info is-large is-fullwidth' %>
  </div>
<% end %>

