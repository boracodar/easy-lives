<h1>Lives</h1>

<table>
  <thead>
    <tr>
      <th>Assunto</th>
      <th>Descrição</th>
      <th>Autor</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lives.each do |live| %>
      <tr>
        <td><%= link_to live.subject, live %></td>
        <td><%= live.description %></td>
        <td><%= live.author.name %></td>

        <% if live.author == current_user %>
          <td><%= link_to 'Editar', edit_live_path(live) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Sugerir live', new_live_path %>
